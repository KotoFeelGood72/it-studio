// Btn

mixin btn(data)
	.btn(class=data.class)
		if data.type === 'link'
			a(href="#" class=`${data.color}-btn`)=data.name
		else if data.type === 'button'
			button(type=data.type data-target=data.target class="trigger" class=`${data.color}-btn`)=data.name
		else if data.type === 'submit'
			input(type="submit" value=data.name class=`${data.color}-btn`)
		

// End btn


// Input 

mixin input(data)
	.global_input(class=data.class ? data.class : data.class="form_input")
			input(type=data.type ? data.type : data.type="text" placeholder=data.place ? data.place : data.place="Ваше имя")
// end input

// txt block

mixin txt(data)
	.txt-block(class=data.class) 
		.txt_head!=data.title
		.txt_boby!=data.txt

// end txt block

