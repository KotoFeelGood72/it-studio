// mixin section_head 

mixin section_head(data)
	.section_head 
		h4.section_title!=data.title 
		.section_nav(class=`${data.class}_nav`)
			.section_nav_btn(class=`${data.class}_btn_prev`)
				+icon('arrow-right')
			.section_nav_btn(class=`${data.class}_btn_next`)
				+icon('arrow-right')


